<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        style="@style/match_match"
        android:background="@color/white">
        <include
            android:id="@+id/layoutHeader"
            layout="@layout/header_layout"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvChat"
            style="@style/match_match"
            android:layout_above="@id/line"
            android:layout_below="@+id/layoutHeader"/>

        <ImageView
            android:id="@+id/line"
            style="@style/view_layout"
            android:layout_above="@id/ivSend" />

        <com.app.community.widget.CustomEditText
            android:id="@+id/editWriteMessage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toStartOf="@id/ivSend"
            android:background="@drawable/edittext_boder"
            android:drawablePadding="@dimen/margin_20"
            android:inputType="textLongMessage"
            android:maxLines="1"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColorHint="@color/hint_color_text"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/ivSend"
            style="@style/image_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_send" />
    </RelativeLayout>
</layout>