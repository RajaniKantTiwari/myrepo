<?xml version="1.0" encoding="utf-8"?>
<layout>

<data>
    <import type="com.app.community.utils.UserPreference"/>
</data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/match_match"
        android:background="@color/white">

        <ScrollView style="@style/match_match"
            android:background="@android:color/white">

            <LinearLayout
                style="@style/match_wrap"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/dark_black_color"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_15">

                    <ImageView
                        android:id="@+id/ivProfile"
                        style="@style/image_80"
                        android:layout_marginTop="@dimen/margin_40"
                        android:scaleType="fitCenter"
                        android:src="@drawable/avatar" />

                    <com.app.community.widget.CustomEditText
                        android:id="@+id/edName"
                        style="@style/edit_text_style_medium"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:hint="@string/name"
                        android:text="@{UserPreference.userName}"
                        android:textColorHint="@color/hint_color_light"
                        android:textColor="@color/white" />

                    <ImageView style="@style/view_layout_brown" />

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvMobile"
                        style="@style/textview_description_large_wrap"
                        android:layout_marginTop="@dimen/margin_10"
                        android:hint="@string/moblile_number"
                        android:text="@{UserPreference.userMono}"
                        android:textColorHint="@color/hint_color_light"
                        android:textColor="@color/white" />

                    <com.app.community.widget.CustomEditText
                        android:id="@+id/edEmail"
                        style="@style/edit_text_style_medium"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center_horizontal"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:hint="@string/email"
                        android:text="@{UserPreference.email}"
                        android:textColorHint="@color/hint_color_light"
                        android:textColor="@color/white" />

                    <ImageView style="@style/view_layout_brown" />
                </LinearLayout>

                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvChangePaymentOption"
                    style="@style/textview_description_ex_large_wrap"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="@string/select_payment_method" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPayment"
                    style="@style/match_wrap" />

                <com.app.community.widget.CustomEditText
                    android:id="@+id/edCreditDetails"
                    style="@style/edit_text_style_medium"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center_horizontal"
                    android:hint="@string/email"
                    android:text="@{UserPreference.cardNumber}"
                    android:textColorHint="@color/hint_color_light"
                    android:inputType="number"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_5" />

                <ImageView style="@style/view_layout" />

            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/layoutNoData"
            layout="@layout/layout_no_data_found"
            android:visibility="gone" />
    </FrameLayout>
</layout>