<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="String"/>
        <variable
            name="cartData"
            type="com.app.community.network.response.dashboard.cart.ProductData"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/match_wrap"
        android:padding="@dimen/margin_7">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:src="@drawable/green_chilli" />

        <LinearLayout
            style="@style/layout_hori_match_2"
            android:layout_marginStart="@dimen/margin_10"
            android:orientation="vertical">

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductName"
                style="@style/wrap_wrap"
                android:maxLines="1"
                android:text="@={cartData.productname}"
                android:textColor="@color/color_black_cart"
                android:textSize="@dimen/textSize_description"
                app:customFont="@string/font_bold" />

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProQuantity"
                style="@style/textview_description_smaller_wrap"
                android:maxLines="1"
                android:text="500 grm"
                android:textColor="@color/light_grey"
                app:customFont="@string/font_bold" />

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductPrice"
                style="@style/textview_description_wrap"
                android:maxLines="1"
                android:text="Rs 10"
                android:textColor="@color/color_sky_blue"
                app:customFont="@string/font_bold" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_hori_match_1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAdd"
                style="@style/add_sub_view"
                android:src="@drawable/add_black"
                />

            <android.support.v4.widget.Space style="@style/layout_hori_match_1" />

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvQuantity"
                style="@style/textview_description_wrap"
                android:gravity="center_horizontal"
                android:text="@{String.valueOf(cartData.qty)}"
                android:textColor="@color/color_black_cart"
                android:textSize="@dimen/textSize_description"
                app:customFont="@string/font_bold" />

            <android.support.v4.widget.Space style="@style/layout_hori_match_1" />

            <ImageView
                android:id="@+id/ivSub"
                style="@style/add_sub_view"
                android:src="@drawable/sub_black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivDeleteCart"
            style="@style/wrap_match"
            android:padding="@dimen/margin_5"
            android:src="@drawable/cross" />
    </LinearLayout>
</layout>