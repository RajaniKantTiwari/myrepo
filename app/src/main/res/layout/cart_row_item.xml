<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/match_wrap"
        android:padding="@dimen/margin_7">
<ImageView
    android:id="@+id/ivProductImage"
    android:layout_width="@dimen/margin_70"
    android:layout_height="@dimen/margin_70"
    android:src="@drawable/green_chilli"/>
        <LinearLayout
            style="@style/layout_hori_match_2"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_10">
            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductName"
                style="@style/wrap_wrap"
                android:textColor="@color/color_black_cart"
                android:textSize="@dimen/textSize_description"
                app:customFont="@string/font_bold"
                android:maxLines="1"
                android:text="Green Chilly " />
            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProQuantity"
                style="@style/textview_description_smaller_wrap"
                android:maxLines="1"
                android:textColor="@color/light_grey"
                app:customFont="@string/font_bold"
                android:text="500 grm"/>
            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductPrice"
                style="@style/textview_description_wrap"
                android:maxLines="1"
                app:customFont="@string/font_bold"
                android:textColor="@color/color_sky_blue"
                android:text="Rs 10"/>
        </LinearLayout>
    <LinearLayout
        style="@style/layout_hori_match_1"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivAdd"
            style="@style/add_sub_view"
            android:src="@drawable/add_black"
            />
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvQuantity"
            style="@style/textview_description_wrap"
            android:layout_width="@dimen/margin_35"
            android:gravity="center_horizontal"
            android:textColor="@color/color_black_cart"
            android:text="0"
            android:textSize="@dimen/textSize_description"
            app:customFont="@string/font_bold"/>
        <ImageView
            android:id="@+id/ivSub"
            style="@style/add_sub_view"
            android:src="@drawable/sub_black"
            />
    </LinearLayout>
    </LinearLayout>
</layout>