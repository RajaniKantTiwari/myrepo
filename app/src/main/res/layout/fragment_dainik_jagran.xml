<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/match_match"
        android:background="@color/white"
        android:orientation="vertical">

        <com.app.community.widget.CustomTextView
            style="@style/textview_description_match"
            android:layout_marginTop="@dimen/margin_25"
            android:gravity="center_horizontal"
            android:text="DAINIK JAGRAN"
            android:textAllCaps="true"
            android:textColor="@color/darker_blackish"
            app:customFont="@string/font_regular" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center">

            <com.app.community.widget.CustomTextView
                style="@style/textview_title_wrap"
                android:text="1200/"
                android:textColor="@color/star_text_color" />

            <com.app.community.widget.CustomTextView
                style="@style/textview_description_small_wrap"
                android:text="1200/"
                android:textColor="@color/star_text_color" />
        </LinearLayout>

            <ImageView
                style="@style/wrap_wrap"
                android:src="@drawable/confirm"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginBottom="@dimen/margin_25"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_gravity="center_horizontal"/>

            <com.app.community.widget.CustomTextView
                style="@style/textview_title_wrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/blue_round_btnbg"
                android:elevation="@dimen/margin_5"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/margin_12"
                android:paddingEnd="@dimen/margin_50"
                android:paddingStart="@dimen/margin_50"
                android:paddingTop="@dimen/margin_12"
                android:text="@string/subscribe_now"
                android:textAllCaps="true"
                android:textColor="@color/white"
                />

    </LinearLayout>


</layout>