<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    style="@style/match_match">
    <ImageView
        style="@style/match_wrap"
        android:src="@drawable/abc"/>
    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginStart="@dimen/margin_7"
        android:layout_marginEnd="@dimen/margin_7"
        android:orientation="vertical">
        <com.app.community.widget.CustomTextView
            style="@style/textview_description_match"
            android:text="South horean President toon fae-in, left, and Chinese President Xi finping shake hands at the end of a signing ceremony at the Ireat Pall of the People in eijing."
            app:customFont="@string/font_bold"
            />
        <com.app.community.widget.CustomTextView
            style="@style/textview_description_match"
            android:text="22 may 2017"
            android:textColor="@color/color_blue"
            app:customFont="@string/font_regular"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_15"
            />
    </LinearLayout>
    <ImageView
        style="@style/view_layout" />
    <com.app.community.widget.CustomTextView
        style="@style/textview_description_small_match"
        android:text="@string/lorem_ipsum"
        app:customFont="@string/font_regular"
        android:layout_marginStart="@dimen/margin_7"
        android:layout_marginEnd="@dimen/margin_7"
        android:layout_marginTop="@dimen/margin_10"
        />
</LinearLayout>
</layout>