<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/match_match"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrollView"
            style="@style/match_match"
            android:fillViewport="true">

            <LinearLayout
                style="@style/match_match"
                android:orientation="vertical"
                android:padding="@dimen/margin_8">

                <com.app.community.widget.CustomTextView
                    style="@style/textview_description_wrap"
                    android:text="@string/New"
                    android:textColor="@color/color_notification"
                    android:layout_marginStart="@dimen/notification_margin_start"
                    android:layout_marginEnd="@dimen/notification_margin_end"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvNew"
                    style="@style/match_wrap" />

                <com.app.community.widget.CustomTextView
                    style="@style/textview_description_wrap"
                    android:layout_marginBottom="@dimen/margin_7"
                    android:layout_marginTop="@dimen/margin_7"
                    android:text="@string/old"
                    android:textColor="@color/old_noti"
                    android:layout_marginStart="@dimen/notification_margin_start"
                    android:layout_marginEnd="@dimen/notification_margin_end"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvOld"
                    style="@style/match_wrap" />
            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/layoutNoData"
            layout="@layout/layout_no_data_found"
            android:visibility="gone" />
    </FrameLayout>
</layout>