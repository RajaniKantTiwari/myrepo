<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="emergency"
            type="com.app.community.network.response.dashboard.home.Emergency"/>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/wrap_wrap"
    android:layout_height="@dimen/margin_60">
    <ImageView
        android:id="@+id/ivPlace"
        style="@style/image_70_60"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="@dimen/margin_70"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_4"
        android:background="@color/background_tranparent">
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvServiceType"
            style="@style/textview_description_wrap"
            android:textColor="@color/white"
            android:text="@={emergency.service_type}"
            android:textSize="@dimen/textsize_very_small"/>
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvPhoneNumber"
            style="@style/textview_description_wrap"
            android:text="@={emergency.phone_no}"
            android:textSize="@dimen/textsize_very_small"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
</layout>