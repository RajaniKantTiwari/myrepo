<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <com.app.community.widget.CustomTextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewLine1"
            android:background="@android:color/holo_red_light"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:paddingTop="5dp"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivProduct"
            style="@style/image_60_70"
            android:layout_below="@+id/tvType"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_6"
            android:background="@drawable/stroke_grey"
            android:gravity="center"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_35"
            android:layout_toEndOf="@+id/ivProduct"
            android:layout_toStartOf="@+id/layoutCart"
            android:orientation="vertical">

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductName"
                style="@style/textview_description_wrap"
                android:layout_marginEnd="@dimen/margin_20"
                android:maxLines="2"
                android:text="Red Chilly" />


            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductQty"
                style="@style/textview_description_smaller_wrap"
                android:layout_marginEnd="@dimen/margin_20"
                android:gravity="center_vertical"
                android:text="500g" />

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductPrice"
                style="@style/textview_description_small_wrap"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_6"
                android:text="$ 25.00"
                android:textColor="@color/color_blue" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCart"
            style="@style/wrap_wrap"
            android:layout_toStartOf="@+id/tvSubscribe"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="@dimen/margin_23"
                android:layout_height="@dimen/margin_23"
                android:layout_marginStart="@dimen/margin_20"
                android:padding="@dimen/margin_3"
                android:src="@drawable/sub_blue" />


            <com.app.community.widget.CustomTextView
                android:id="@+id/tvQty"
                style="@style/textview_description_large_wrap"
                android:layout_marginEnd="@dimen/margin_6"
                android:layout_marginStart="@dimen/margin_6"
                android:gravity="center"
                android:padding="@dimen/margin_3"
                android:text="0" />

            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="@dimen/margin_23"
                android:layout_height="@dimen/margin_23"
                android:layout_below="@+id/layoutInfo"
                android:layout_toEndOf="@+id/tvQty"
                android:padding="@dimen/margin_3"
                android:src="@drawable/add_blue" />
        </LinearLayout>

        <com.app.community.widget.CustomTextView
            android:id="@+id/tvSubscribe"
            style="@style/textview_description_small_wrap"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/subscribe_color"
            android:paddingBottom="@dimen/margin_3"
            android:paddingEnd="@dimen/margin_8"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_3"
            android:text="@string/subscribe"
            android:textAllCaps="true"
            app:customFont="@string/font_regular" />

        <View
            android:id="@+id/viewLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ivProduct"
            android:layout_marginTop="@dimen/margin_7"
            android:background="@android:color/darker_gray" />

        <View
            android:id="@+id/viewBlank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine2" />


    </RelativeLayout>
</layout>