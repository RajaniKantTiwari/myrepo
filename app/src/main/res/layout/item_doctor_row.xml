<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/stroke_grey_bg">

            <RelativeLayout
                style="@style/match_wrap"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/mother_dairy"
                    android:background="@drawable/stroke_grey"/>

                <RelativeLayout
                    android:id="@+id/layoutDetails"
                    style="@style/match_wrap"
                    android:layout_toEndOf="@+id/ivProductImage"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_5">


                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvProductName"
                        style="@style/textview_title_wrap"
                        android:text="Dr. John Doe" />

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvLocation"
                        style="@style/textview_description_small_wrap"
                        android:layout_below="@+id/tvProductName"
                        android:layout_marginTop="@dimen/margin_3"
                        android:text="U. JoKn Doe"
                        android:textColor="@color/dark_sky_blue"
                        app:customFont="@string/font_bold" />

                    <LinearLayout
                        android:id="@+id/layout"
                        style="@style/match_wrap"
                        android:layout_below="@+id/tvLocation">

                        <com.app.community.widget.CustomTextView
                            android:id="@+id/tvProductType"
                            style="@style/textview_description_small_wrap"
                            android:layout_marginTop="@dimen/margin_3"
                            android:text="Bhartiy"
                            android:textAllCaps="true" />
                        <com.app.community.widget.CustomTextView
                            style="@style/textview_description_smaller_wrap"
                            android:layout_marginTop="@dimen/margin_3"
                            android:text="/7 year experience"
                            android:maxLength="50"
                            />
                    </LinearLayout>

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvStar"
                        style="@style/textview_title_wrap"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_20"
                        android:drawableStart="@drawable/star"
                        android:gravity="center_vertical"
                        android:text="5.2"
                        android:textColor="@color/dark_yellow"
                        app:customFont="@string/font_bold" />


                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvBook"
                        style="@style/textview_title_wrap"
                        android:layout_marginTop="@dimen/margin_13"
                        android:layout_below="@+id/tvStar"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_toStartOf="@+id/tvView"
                        android:background="@drawable/blue_round_btnbg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_3"
                        android:paddingEnd="@dimen/margin_15"
                        android:paddingStart="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_3"
                        android:text="@string/book"
                        android:textColor="@color/white" />

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvView"
                        style="@style/textview_title_wrap"
                        android:layout_marginTop="@dimen/margin_13"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/tvStar"
                        android:background="@drawable/dark_round_btnbg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_3"
                        android:paddingEnd="@dimen/margin_15"
                        android:paddingStart="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_3"
                        android:text="@string/view"
                        android:textColor="@color/white"
                        app:customFont="@string/font_bold" />


                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvClose"
                        style="@style/textview_description_small_wrap"
                        android:layout_below="@+id/layout"
                        android:background="@drawable/light_green_bg"
                        android:padding="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_10"
                        android:paddingStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="open at 8:30"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_description_smaller"
                        app:customFont="@string/font_bold" />


                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</layout>