<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <import type="com.app.community.utils.CommonUtils"/>
    <variable
        name="merchantResponse"
        type="com.app.community.network.response.dashboard.feed.MerchantResponse"/>
</data>
<LinearLayout
    style="@style/match_wrap"
    android:layout_marginStart="@dimen/margin_15"
    android:layout_marginEnd="@dimen/margin_15"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@drawable/stroke_grey_bg"
    android:padding="@dimen/margin_2">
    <android.support.v7.widget.CardView
        style="@style/match_wrap"
        android:elevation="@dimen/margin_5"
        app:cardCornerRadius="@dimen/margin_4">

        <RelativeLayout
            style="@style/match_wrap"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="@dimen/margin_80"
                android:layout_height="@dimen/margin_80"
                android:padding="@dimen/margin_5"
                android:src="@drawable/mother_dairy"
                android:background="@drawable/stroke_grey"/>

            <RelativeLayout
                android:id="@+id/layoutDetails"
                style="@style/match_wrap"
                android:layout_toEndOf="@+id/ivProductImage"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_5">


                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvProductName"
                    android:text="@={merchantResponse.name}"
                    style="@style/textview_description_ex_large_wrap"
                    />

                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvLocation"
                    style="@style/textview_description_smaller_wrap"
                    android:text="@={merchantResponse.address}"
                    android:layout_below="@+id/tvProductName"
                    android:textColor="@color/color_black"
                    android:layout_marginTop="@dimen/margin_3" />

                <LinearLayout
                    android:id="@+id/layoutProductType"
                    style="@style/wrap_wrap"
                    android:layout_below="@+id/tvLocation"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_3">
                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvProductType"
                        style="@style/textview_description_smaller_wrap"
                        android:text="@={merchantResponse.category}"
                        android:textColor="@color/color_black"
                        />

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvdistance"
                        style="@style/textview_description_smaller_wrap"
                        android:layout_marginStart="@dimen/margin_5"
                        android:drawablePadding="@dimen/margin_5"
                        android:text="@{CommonUtils.twoDecimalPlaceString(merchantResponse.distance)+@string/km}"
                        android:textColor="@color/color_black"
                        android:drawableStart="@drawable/location_img"
                        />
                </LinearLayout>


                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvStar"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_15"
                    style="@style/textview_description_small_wrap"
                    android:text="@{CommonUtils.oneDecimalPlaceString(merchantResponse.rating)}"
                    android:layout_alignParentEnd="true"
                    android:drawableStart="@drawable/star"
                    android:gravity="center_vertical"
                    android:textColor="@color/star_text_color"
                    />


                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvContact"
                    style="@style/button_medium_wrap"
                    android:layout_below="@+id/tvStar"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_toStartOf="@+id/tvView"
                    android:background="@drawable/blue_round_btn_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingEnd="@dimen/margin_10"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:text="@string/contact"
                    android:textColor="@color/white"
                    />

                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvView"
                    style="@style/button_medium_wrap"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tvStar"
                    android:background="@drawable/dark_round_btnbg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingEnd="@dimen/margin_10"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:text="@string/view"
                    android:textColor="@color/white"
                    />


                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvClose"
                    style="@style/textview_description_smaller_wrap"
                    android:layout_below="@+id/layoutProductType"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:background="@drawable/red_bg_4"
                    android:textColor="@color/white"
                    android:padding="@dimen/margin_5"
                    android:text="@string/closed_now"
                    />

                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvOpen"
                    style="@style/textview_description_smaller_wrap"
                    android:layout_below="@+id/layoutProductType"
                    android:layout_toEndOf="@+id/tvClose"
                    android:background="@drawable/light_black_bg_3"
                    android:padding="@dimen/margin_5"
                    android:text="@{@string/open_now+CommonUtils.getStartEndDate(merchantResponse.opentime,merchantResponse.closetime)}"
                    />
                <com.app.community.widget.CustomTextView
                    style="@style/textview_description_smaller_wrap"
                    android:layout_below="@+id/layoutProductType"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/red_bg_4"
                    android:padding="@dimen/margin_5"
                    android:text="@string/open_now"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvDiscount"
                style="@style/textview_description_smaller_match"
                android:layout_below="@+id/layoutDetails"
                android:background="@color/light_green"
                android:gravity="center"
                android:text="@={merchantResponse.offer}"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</layout>