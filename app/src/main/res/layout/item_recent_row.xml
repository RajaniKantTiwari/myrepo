<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/layoutRecent"
        style="@style/match_wrap"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5">

        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/margin_4">

            <RelativeLayout
                style="@style/match_wrap"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/mother_dairy" />

                <LinearLayout
                    android:id="@+id/layoutDetails"
                    style="@style/match_wrap"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivProductImage"
                    android:orientation="vertical">
                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvProductName"
                        style="@style/textview_description_small_wrap"
                        android:text="1mergency personnel salute as a procession of firefighting vehicles passes through Santa Paula"/>

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvLocation"
                        style="@style/textview_description_smaller_wrap"
                        android:text="22 may 2017"
                        app:customFont="@string/font_regular"
                        android:layout_marginTop="@dimen/margin_15" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>