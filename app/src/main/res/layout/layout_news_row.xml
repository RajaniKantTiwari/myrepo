<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="news"
        type="com.app.community.network.response.dashboard.home.News"/>
</data>
    <LinearLayout
        android:id="@+id/layoutNews"
        style="@style/match_wrap">

        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:minHeight="@dimen/margin_120"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/margin_2"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/welcome_margin_start"
            android:layout_marginEnd="@dimen/welcome_margin_end">
            <LinearLayout
                style="@style/match_wrap"
                android:minHeight="@dimen/margin_120"
                android:orientation="vertical"
                android:background="@drawable/stroke_dark_grey_bg">
                <com.app.community.widget.CustomTextView
                    style="@style/textview_description_wrap"
                    android:background="@color/yellow_color"
                    android:padding="@dimen/margin_3"
                    android:paddingStart="@dimen/margin_18"
                    android:paddingEnd="@dimen/margin_25"
                    android:text="@={news.category_name}"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    />
            <com.app.community.widget.CustomTextView
                android:id="@+id/tvHeading"
                android:layout_margin="@dimen/margin_5"
                android:paddingTop="@dimen/margin_6"
                style="@style/textview_description_match"
                android:text="@={news.news_title}"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAllCaps="true"/>

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvDetails"
                style="@style/textview_description_wrap"
                android:layout_margin="@dimen/margin_6"
                android:paddingBottom="@dimen/margin_7"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@={news.news_descr}"
                app:customFont="@string/font_regular" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</layout>