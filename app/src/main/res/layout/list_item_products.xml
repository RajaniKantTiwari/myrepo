<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        >

    <RelativeLayout
        android:id="@+id/layoutCategory"
        style="@style/match_wrap"
        android:layout_height="@dimen/margin_40"
        android:layout_margin="@dimen/margin_6"
        />

        <RelativeLayout
            android:id="@+id/layoutProduct"
            style="@style/match_wrap"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_9"
            android:layout_marginBottom="@dimen/margin_9"
            android:layout_centerInParent="true"/>

            <com.app.community.widget.CustomTextView
                android:id="@+id/tvProductName"
                style="@style/textview_description_match"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_toStartOf="@+id/ivArrow"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ivArrow"
                style="@style/wrap_wrap"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_12"
                android:padding="@dimen/margin_5"
                android:src="@drawable/ic_arrow" />
    </RelativeLayout>
</layout>

