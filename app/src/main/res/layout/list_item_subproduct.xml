<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutChild"
        style="@style/drawer_style"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_15"
        android:orientation="vertical">
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvSubProductName"
            style="@style/textview_description_match"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:paddingEnd="@dimen/margin_5"
            android:gravity="center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:layout_above="@+id/layoutLine"
            android:textColor="@color/white"
            app:customFont="@string/font_regular" />

        <ImageView
            android:id="@+id/layoutLine"
            android:layout_alignParentBottom="true"
            style="@style/view_layout_white_5"/>
    </RelativeLayout>
</layout>
