<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/order_row_item">

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_6">

        <com.app.community.widget.CustomTextView
            style="@style/textview_description_wrap"
            android:text="@string/from"
            android:textAllCaps="true"
            android:textColor="@color/color_dark_grey" />

        <android.support.v4.widget.Space style="@style/layout_hori_wrap_1" />

        <com.app.community.widget.CustomTextView
            style="@style/textview_description_wrap"
            android:text="@string/total"
            android:textAllCaps="true"
            android:textColor="@color/color_dark_grey" />
    </LinearLayout>

    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_3">

        <com.app.community.widget.CustomTextView
            style="@style/textview_description_small_wrap"
            android:text="Mother Diary"
            android:textAllCaps="true" />

        <android.support.v4.widget.Space style="@style/layout_hori_wrap_1" />

        <com.app.community.widget.CustomTextView
            style="@style/textview_description_small_wrap"
            android:text="627"
            android:textAllCaps="true" />
    </LinearLayout>
</merge>