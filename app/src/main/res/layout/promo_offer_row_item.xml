<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="coupon"
        type="com.app.community.network.request.dashboard.Coupon"/>
</data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutCoupon"
        style="@style/match_wrap"
        android:layout_margin="@dimen/margin_8">
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvStoreName"
            android:layout_toStartOf="@+id/tvApply"
            android:layout_marginEnd="@dimen/margin_5"
            android:maxLines="1"
            android:text="Locasto Fashion Store"
            style="@style/textview_description_large_match"/>
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvAddress"
            android:layout_below="@+id/tvStoreName"
            android:layout_toStartOf="@+id/tvApply"
            android:maxLines="2"
            android:text="sector 49 gurgaon"
            android:layout_marginEnd="@dimen/margin_5"
            style="@style/textview_description_small_match" />
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvTermsCondition"
            android:maxLines="1"
            android:layout_below="@+id/tvAddress"
            android:layout_marginEnd="@dimen/margin_5"
            android:text="terms and condition"
            android:textColor="@color/old_noti"
            android:layout_toStartOf="@+id/tvApply"
            style="@style/textview_description_match" />
        <com.app.community.widget.CustomTextView
            android:id="@+id/tvApply"
            style="@style/textview_description_large_wrap"
            android:text="@string/apply"
            android:padding="@dimen/margin_10"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_round"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</layout>