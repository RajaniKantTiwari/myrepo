<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:background="@color/darker_blackish"
        app:contentInsetStart="@dimen/margin_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/ivDrawer"
                style="@style/image_40">

                <ImageView
                    style="@style/image_25"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hamberg_icon" />
            </RelativeLayout>
            <RelativeLayout
                style="@style/layout_hori_match_1">
                <LinearLayout
                    android:id="@+id/layoutTab"
                    style="@style/match_match"
                    android:visibility="gone">
                    <android.support.v4.widget.Space
                        style="@style/layout_hori_match_4" />
                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvHeading"
                        style="@style/textview_title_wrap"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white" />
                    <android.support.v4.widget.Space
                        style="@style/layout_hori_match_1" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutProduct"
                    style="@style/match_match"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <com.app.community.widget.CustomTextView
                        android:id="@+id/tvAddress"
                        style="@style/textview_description_smaller_wrap"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_toStartOf="@+id/ivProductImage"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/ivProductImage"
                        style="@style/image_70_50"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent" />

                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivSearch"
                style="@style/image_45_50"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/layoutCart"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:padding="@dimen/margin_12"
                android:src="@drawable/ic_search_white" />

            <RelativeLayout
                android:id="@+id/layoutCart"
                style="@style/image_45_50"
                android:layout_toStartOf="@+id/ivRightDrawer">

                <ImageView
                    style="@style/wrap_wrap"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:padding="@dimen/margin_12"
                    android:src="@drawable/shopping_cart" />

                <com.app.community.widget.CustomTextView
                    android:id="@+id/tvCart"
                    style="@style/textview_description_small_wrap"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/black_cart_dot"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ivRightDrawer"
                style="@style/image_40_50">
                <ImageView
                    style="@style/image_25"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/right_icon" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</layout>